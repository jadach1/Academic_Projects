@model IEnumerable<Assignment9.Controllers.TrackWithDetails>

@{
    ViewBag.Title = "Index";
    var userAccount = new Assignment9.Controllers.UserAccount(User as System.Security.Claims.ClaimsPrincipal);
 }
 <h2>List of Tracks</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Composers)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AlbumName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Composers)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AlbumName)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id=item.Id }) 
            @if(userAccount.HasRoleClaim("Clerk"))
            {
                @Html.Raw(" | ")
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            }
            
        </td>
    </tr>
}

</table>
