@model Assignment9.Controllers.AlbumBase

@{
    ViewBag.Title = "Delete";
}

<h2>Delete Album @Model.Name</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>AlbumBase</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            <b>@Html.DisplayNameFor(model => model.Name)</b>
        </dt>

        <dd class="table-striped">
            @Html.DisplayFor(model => model.Name)
            <hr />
        </dd>

        <dt>
            <b>@Html.DisplayNameFor(model => model.ReleaseDate)</b>
        </dt>

        <dd class="table-striped">
            @Html.DisplayFor(model => model.ReleaseDate)
            <hr />
        </dd>

        <dt>
            <b>@Html.DisplayNameFor(model => model.UrlAlbum)</b>
        </dt>

        <dd>
            <img src="@Html.DisplayFor(model => model.UrlAlbum)" width="150" height="100" alt="Album  @Model.Name" />
            <hr />
        </dd>

        <dt>
            <b>@Html.DisplayNameFor(model => model.Genre)</b>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Genre)
            <hr />
        </dd>

        <dt>
            <b>@Html.DisplayNameFor(model => model.Description)</b>
        </dt>

        <dd>
            <div class="panel panel-default panel-body">
                @Html.Raw(Model.Description)
            </div>
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
